<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "src/hibernate-mapping-3.0.dtd">
 
          <hibernate-mapping>
         <class name="com.pack.Model.Employee" table="Employee100" dynamic-update="true">
         <id name="id" column="Emp_ID"> <!-- if column not given then in table the column name will be same as name=ID -->
         <generator class="assigned"></generator>
         </id>
         <property name="name" column="Emp_name"></property>
         <property name="salary"></property>
         <property name="dob"></property>
         <property name="designation"></property> <!-- property attributes should be same as in persistent class(pojo/model) -->
         </class>
          </hibernate-mapping>